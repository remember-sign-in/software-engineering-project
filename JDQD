upstream app_server {
    server unix:/home/runner/work/software-engineering-project/software-engineering-project/run/gunicorn.sock fail_timeout=0;
}

server {
    listen 80;

    # add here the ip address of your server
    # or a domain pointing to that ip (like example.com or www.example.com)
    server_name 116.62.191.77;

    keepalive_timeout 5;
    client_max_body_size 4G;

    access_log /home/runner/work/software-engineering-project/software-engineering-project/logs/nginx-access.log;
    error_log /home/runner/work/software-engineering-project/software-engineering-project/logs/nginx-error.log;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;

        if (!-f $request_filename) {
            proxy_pass http://app_server;
            break;
        }
        }
}
